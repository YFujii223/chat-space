.sidebar
  .sidebar-top
    .sidebar-top__name
      = current_user.name
    %ul.sidebar-top__lists
      %li.list
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon-edit'
      %li.list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon-gear'
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
